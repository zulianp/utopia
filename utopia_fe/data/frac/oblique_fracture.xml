<!-- MASTER STUFF -->
<master>
	<mesh>
		<type>square</type>
		<elem-type>quad</elem-type>
		<order>1</order>

		<min-x>0.</min-x>
		<min-y>0.</min-y>

		<max-x>1.</max-x>
		<max-y>1.</max-y>

		<n-x>20</n-x>
		<n-y>20</n-y>

		<refinements>3</refinements>
	</mesh>

	<space>
		<system-name>master</system-name>

		<variables>
			<var>
			<name>u</name>
			<order>1</order>
			</var>
		</variables>

		<boundary-conditions>
			<entry>
				<side>3</side>
				<value>1</value>
			</entry>
			<entry>
				<side>1</side>
				<value>4</value>
			</entry>
		</boundary-conditions>
	</space>

	<diffusivity>1.</diffusivity>
</master>

<!-- SLAVE STUFF -->
<slave>
	<mesh>
		<type>file</type>
		<path>../data/frac/line.e</path>
		<!-- <refinements>4</refinements> -->
	</mesh>

	<space>
		<system-name>slave</system-name>
		<variables>
			<var>
			<name>u</name>
			<order>1</order>
			<fe-family>LAGRANGE</fe-family>
			</var>
		</variables>

		<boundary-conditions>
			<entry>
				<side>1</side>
				<value>1</value>
			</entry>
			<entry>
				<side>2</side>
				<value>4</value>
			</entry>
		</boundary-conditions>
	</space>

	<forcing-function></forcing-function>

	<diffusivity>1000.</diffusivity>
</slave>

<!-- MULTIPLIER STUFF -->
<multiplier>
	<mesh>
		<type>file</type>
		<path>../data/frac/line.e</path>
		<!-- <refinements>2</refinements> -->
	</mesh>

	<space>
		<system-name>multiplier</system-name>
		<variables>
			<var1>
				<name>lagr</name>
				<order>0</order>
				<fe-family>MONOMIAL</fe-family>
			</var1>
		</variables>
	</space>
</multiplier>

<!-- <solve-strategy>monolithic</solve-strategy> -->

<solve-strategy>staggered</solve-strategy>
<use-mg>true</use-mg>
<mg-sweeps>1</mg-sweeps>
<mg-levels>4</mg-levels>
<flow-type>transient</flow-type>
<!-- <lump-mass-matrix>true</lump-mass-matrix> -->
<dt>0.002</dt>
<simulation-time>0.5</simulation-time>

