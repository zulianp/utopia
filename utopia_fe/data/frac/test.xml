<!-- MASTER STUFF -->
<master>
	<mesh>
		<type>square</type>
		<elem-type>quad</elem-type>
		<order>1</order>

		<min-x>0.</min-x>
		<min-y>0.</min-y>

		<max-x>1.</max-x>
		<max-y>1.</max-y>

		<n-x>50</n-x>
		<n-y>50</n-y>
		<!-- <refinements>2</refinements> -->
	</mesh>

	<space>
		<system-name>master</system-name>
		<variables>
			<var>
			<name>u</name>
			<order>1</order>
			</var>
		</variables>

		<boundary-conditions>
			<entry>
				<side>3</side>
				<value>2</value>
			</entry>
			<entry>
				<side>1</side>
				<value>1</value>
			</entry>
		</boundary-conditions>
	</space>

	<diffusivity>1.</diffusivity>
</master>

<!-- SLAVE STUFF -->
<slave>
	<mesh>
		<type>file</type>
		<path>../data/frac/line.e</path>
		<refinements>1</refinements>
	</mesh>

	<space>
		<system-name>slave</system-name>
		<variables>
			<var>
			<name>u</name>
			<order>1</order>
			<fe-family>LAGRANGE</fe-family>
			</var>
		</variables>

		<boundary-conditions>
			<entry>
				<side>1</side>
				<value>1</value>
			</entry>
			<entry>
				<side>2</side>
				<value>2</value>
			</entry>
		</boundary-conditions>
	</space>

	<forcing-function></forcing-function>

	<diffusivity>1000.</diffusivity>
</slave>

<solve-strategy>staggered</solve-strategy>
<!-- <solve-strategy>separate</solve-strategy> -->
<!-- <solve-strategy>monolithic</solve-strategy> -->
<use-mg>true</use-mg>
<mg-sweeps>1</mg-sweeps>
<mg-levels>4</mg-levels>
<flow-type>transient</flow-type>

<transport>
	<dt>0.1</dt>
	<simulation-time>4.</simulation-time>
	<lump-mass-matrix>true</lump-mass-matrix>
	<regularization-parameter>0.5</regularization-parameter>
	<use-upwinding>true</use-upwinding>

	<matrix>
		<space>
			<system-name>transport</system-name>
			<variables>
				<var>
					<name>c</name>
					<order>1</order>
					<fe-family>LAGRANGE</fe-family>
				</var>
			</variables>

			<boundary-conditions>
				<entry>
					<side>3</side>
					<value>1</value>
					<var>0</var>
				</entry>
			</boundary-conditions>

		</space>

		<forcing-function>
		<!-- 	<fun>
				<side>1</side>
				<value>1.</value>
			</fun> -->
			<!-- <fun>
				<side>4</side>
				<value>-1.</value>
			</fun> -->
		<!-- 	<fun>
				<type>surface</type>
				<value>1.</value>
				<block>3</block>
				<coord>2</coord>
			</fun> -->
		</forcing-function>

		<outflow>1</outflow>
	</matrix>



</transport>

