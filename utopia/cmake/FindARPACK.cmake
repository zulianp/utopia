SET(ARPACK_SEARCH_PATHS ${ARPACK_DIR})
SET(ARPACK_SEARCH_PATHS ${ARPACK_SEARCH_PATHS}; /opt/local/lib)
FIND_LIBRARY(ARPACK_LIBRARIES NAMES parpack arpack PATHS ${ARPACK_SEARCH_PATHS})

SET(ARPACK_FOUND FALSE)
IF (ARPACK_LIBRARIES)
  SET(ARPACK_FOUND TRUE)
    MARK_AS_ADVANCED(ARPACK_LIBRARIES)
ENDIF (ARPACK_LIBRARIES)

IF (ARPACK_FOUND)
  IF (NOT ARPACK_LIBRARIES_FIND_QUIETLY)
     MESSAGE(STATUS "Arpack Found")
     GET_FILENAME_COMPONENT(ARPACK_PATH ${ARPACK_LIBRARIES} PATH CACHE)
     SET(ARPACK_INCLUDE_DIR ${ARPACK_PATH}/../include CACHE FILEPATH "ARPACK include directory.")
  ENDIF (NOT ARPACK_LIBRARIES_FIND_QUIETLY)
ELSE(ARPACK_FOUND)
  IF (ARPACK_LIBRARIES_FIND_REQUIRED)
     MESSAGE(FATAL_ERROR "Could not find Arpack")
  ENDIF (ARPACK_LIBRARIES_FIND_REQUIRED)
ENDIF (ARPACK_FOUND)
